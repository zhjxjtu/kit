<ul class="nav nav-tabs">
  <li>
  	<a href="#add_modal" role="button" class="btn" data-toggle="modal">
	  <i class="icon-plus"></i>
  	</a>
  </li>
  <li <% if yield(:title) == "Contacts" %>class="active"<% end %>>
    <%= link_to "Contacts", contact_path(params[:id]) %>
  </li>
  <li <% if yield(:title) == "Invitations" %>class="active"<% end %>>
    <%= link_to "Invitations", invitation_path(params[:id]) %>
  </li>
</ul>

<div id="add_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">New Contact</h3>
  </div>
  <div class="modal-body">
    <%= form_for @invitation, html: {class: "form-horizontal"} do |f| %>
      <%= f.hidden_field :user_id, value: current_user.id %>
      <div class="control-group">
        <label class="control-label" for="invitation_email">Email</label>
        <div class="controls">
          <%= f.text_field :email, placeholder: "Input email" %>
        </div>
      </div>
      
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Cancel</button>
    <%= f.submit "Save", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>