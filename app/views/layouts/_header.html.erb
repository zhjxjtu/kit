<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
  	  <%= link_to "JingsApp (Beta)", root_path, class: "brand", id: "logo", tabindex: "-1" %>
	    <nav>
    	  <ul class="nav nav-tabs pull-right">
    	    <% if signed_in? %>            
            <li>
              <%= link_to 'Contacts', contact_path(current_user), tabindex: "-1" %>
            </li>
    	      <li>
              <%= link_to 'Add +', invitation_path(current_user), tabindex: "-1" %>
            </li>
    	      <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown", tabindex= "-1">
                <%= current_user.email %>
                <% if admin? %>
                  <small>(Admin)</small>
                <% end %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", edit_user_path(current_user) %></li>
                <li><%= link_to "Account Security", edit_password_path(current_user) %></li>
                <% if admin? %>
                  <li class="divider"></li>
                  <li><%= link_to 'All users', users_path, tabindex: "-1" %></li>
                <% end %>
                <li class="divider"></li>
                <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
              </ul>
            </li>
	  	    <% else %>
	  	      <li>
              <%= link_to "About", 'http://www.jingzhang.info/', tabindex: "-1", target: "_blank" %>
            </li>
	  	    <% end %>
	      </ul>
	    </nav>
	  </div>
	</div>
</header>